<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 출력 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n %ex{0}</pattern>
        </encoder>
    </appender>

    <!-- ERROR 이상의 로그만 기록하는 파일 appender -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/gms.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 로그 파일을 월별로 저장 -->
            <fileNamePattern>logs/gms-%d{yyyy-MM}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <!-- LevelFilter를 추가하여 ERROR 이상의 로그만 ACCEPT -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n %ex{0}
            </pattern>
        </encoder>
    </appender>

    <!-- INFO 로그만 기록하는 파일 appender -->
    <appender name="FILE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/gms_info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 로그 파일을 일별로 저장 -->
            <fileNamePattern>logs/gms-info-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <!-- LevelFilter를 추가하여 INFO 레벨만 ACCEPT -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n %ex{0}
            </pattern>
        </encoder>
    </appender>

    <!-- 특정 로거들의 레벨 설정 -->
    <logger name="ch.qos.logback" level="WARN" />
    <logger name="org.springframework.boot.logging.logback" level="WARN" />

    <!-- 단일 루트 로거에 모든 appender를 추가 (루트 레벨은 DEBUG로 설정) -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_ERROR" />
    </root>

    <logger name="emfoplus.gms" level="INFO">
        <appender-ref ref="FILE_DEBUG" />
    </logger>

</configuration>
